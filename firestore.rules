rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Sessions (Projects) collection
    match /sessions/{sessionId} {
      // TEMPORARILY ALLOW ALL AUTHENTICATED READS for debugging
      allow read: if isAuthenticated();
      
      // Allow create with userId set to current user OR without userId (anonymous)
      allow create: if isAuthenticated() && 
                      (!('userId' in request.resource.data) || 
                       request.resource.data.userId == request.auth.uid);
      
      // Allow update if authenticated (will tighten after debugging)
      allow update: if isAuthenticated();
      
      // Allow delete if authenticated (will tighten after debugging)
      allow delete: if isAuthenticated();
      
      // Messages sub-collection
      match /messages/{messageId} {
        // Users can read messages if they own the parent session OR session has no userId
        allow read: if isAuthenticated() && 
                      (!exists(/databases/$(database)/documents/sessions/$(sessionId)) ||
                       !('userId' in get(/databases/$(database)/documents/sessions/$(sessionId)).data) ||
                       get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId == request.auth.uid || 
                       isAdmin());
        
        // Users can create messages if authenticated AND (own session OR session has no userId)
        allow create: if isAuthenticated() &&
                        (!exists(/databases/$(database)/documents/sessions/$(sessionId)) ||
                         !('userId' in get(/databases/$(database)/documents/sessions/$(sessionId)).data) ||
                         get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId == request.auth.uid) &&
                        request.resource.data.timestamp != null &&
                        request.resource.data.role in ['user', 'assistant'] &&
                        request.resource.data.content is string;
        
        // Messages are immutable once created (no updates or deletes)
        allow update, delete: if false;
      }
      
      // Versions sub-collection
      match /versions/{versionId} {
        // Users can read versions if they own the parent session
        allow read: if isAuthenticated() && 
                      (get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId == request.auth.uid || 
                       isAdmin());
        
        // Users can create versions if they own the parent session
        allow create: if isAuthenticated() && 
                        get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId == request.auth.uid &&
                        request.resource.data.versionNumber is int &&
                        request.resource.data.contentOutput != null &&
                        request.resource.data.changeType in ['auto', 'manual', 'ai_refinement'];
        
        // Versions are immutable once created (no updates or deletes)
        allow update, delete: if false;
      }
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
